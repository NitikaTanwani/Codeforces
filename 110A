import java.util.*;

public class apple
{
   public static void main(String[] args)
   {
	   Scanner o=new Scanner(System.in);
	   String s=o.nextLine();
	   
	   int count=0;
	   for(int i=0;i<s.length();i++)
		   if(s.charAt(i)=='4' || s.charAt(i)=='7')
			     count++;
	   
	   //check if count is lucky number...
	   if(count==4 || count==7)
		   System.out.println("YES");
	   else
		   System.out.println("NO");
   }
}
